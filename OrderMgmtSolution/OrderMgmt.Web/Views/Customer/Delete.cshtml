@model OrderMgmt.Domain.Customer

@{
    ViewData["Title"] = "Müşteri Sil";
}

<h2>Müşteri Sil</h2>

<h4>Bu müşteriyi silmek istediğinize emin misiniz?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Müşteri Kodu</dt>
        <dd class="col-sm-10">@Model.CustomerCode</dd>

        <dt class="col-sm-2">Müşteri Adı</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Oluşturulma Tarihi</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-2">Aktif mi?</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Evet" : "Hayır")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>