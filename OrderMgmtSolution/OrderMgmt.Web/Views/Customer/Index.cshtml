@model IEnumerable<OrderMgmt.Domain.Customer>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h2>Müşteri Listesi</h2>

<p>
    <a asp-action="Add" class="btn btn-success">Yeni Müşteri Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Müşteri Kodu</th>
            <th>Ad</th>
            <th>Email</th>
            <th>Oluşturulma Tarihi</th>
            <th>Aktif mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerCode</td>
                <td>@item.CustomerName</td>
                <td>@item.Email</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@(item.IsActive ? "Evet" : "Hayır")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>