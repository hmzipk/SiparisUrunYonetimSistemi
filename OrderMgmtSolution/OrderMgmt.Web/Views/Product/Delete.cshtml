@model OrderMgmt.Domain.Product

@{
    ViewData["Title"] = "Ürün Sil";
}

<h2>Ürün Sil</h2>

<h4>Bu ürünü silmek istediğinize emin misiniz?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Stok Kodu</dt>
        <dd class="col-sm-10">@Model.StockCode</dd>

        <dt class="col-sm-2">Stok Adı</dt>
        <dd class="col-sm-10">@Model.StockName</dd>

        <dt class="col-sm-2">Aktif mi?</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Evet" : "Hayır")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group mt-3">
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</form>